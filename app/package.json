{
  "name": "chess-multiplayer",
  "version": "1.0.0",
  "description": "Chess Multiplayer with Real-time Analysis - Desktop App",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/chess-multiplayer",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.chess.multiplayer",
    "productName": "Chess Multiplayer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.svg"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.svg"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.svg",
      "category": "Game"
    }
  },
  "keywords": [
    "chess",
    "multiplayer",
    "electron",
    "analysis",
    "lichess",
    "puzzles"
  ],
  "author": "Chess Multiplayer Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
